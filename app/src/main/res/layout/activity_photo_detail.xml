<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:id="@+id/flImageContainer"
    android:background="@android:color/background_dark"
    tools:context="com.codepath.apps.flickmein.AlbumActivity">

    <com.codepath.apps.flickmein.thirdparty.TouchImageView
        android:id="@+id/ivImageResult"
        android:background="@android:color/background_dark"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/rlLoader"
        android:background="@android:color/background_dark"
        android:visibility="visible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivLoaderImage"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/loading" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/loader_loading"
            android:id="@+id/txtLoaderCaption"
            android:layout_below="@+id/ivLoaderImage"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            android:textColor="#d9d9d9"
            android:gravity="center"/>
    </RelativeLayout>
</FrameLayout>
